extends ../theme-boilerplate.pug

block sidebar
  include ./sidebar.pug
  +consumer_sidebar

block content
  .row: .col-lg-12
    +page-title('Recent Questions', ['Consumer', 'Recent Questions'])

  .row: .col-lg-12
    +card('Questions')
      .table-responsive
        table.table
          thead
            tr
              th Question Name
              th(data-intro='number of provider who answer the question.')
                | Count of Approved
          tbody
           each question in questions
             tr
               td: a(href=`/consumer/questions/${question.id}`)= question.title   
               td= question.reply_count


