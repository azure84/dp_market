mixin cardbox(title, value)
  .card-box
    h4.mt-0.font-16= title
    if value
      h2.text-primary.my-3.text-center
        span.counterup= value
    if block
      block

mixin card(title)
  .card: .card-body
    h4.header-title.mb-3= title
    if block
      block

mixin page-title(title, links=[])
  .page-title-box
    .page-title-right
      ol.breadcrumb.m-0
        - for (var i = 0; i < links.length - 1; i++) {
          li.breadcrumb-item: a(href='javascript:void(0);')= links[i]
        -}
        li.breadcrumb-item.active: a(href='javascript:void(0);')= links[links.length-1]
    h4.page-title= title
