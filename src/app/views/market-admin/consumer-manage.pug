extends ../theme-boilerplate.pug

block sidebar
  include ./sidebar.pug
  +admin_sidebar

block content
  .row: .col-lg-12
    +page-title('Consumer List', ['Manage Consumers'])
  .row: .col-lg-12
    +card('list')
      .table-responsive
        table.table(data-intro='Admin manage the consumer\'s default epsilon, price, point and credit information.')
          thead
            tr
              th consumer ID
              th Default price
              th Default epsilon
              th consumer point
              th consumer credit
          tbody
            each consumer in consumers
              tr
                td
                  a(href=`/admin/manage/consumers/${consumer.id}`)= consumer.email
                td= consumer.price
                td= consumer.epsilon
                td= consumer.point
                td= consumer.credit
