extends ../theme-boilerplate.pug

block sidebar
  include ./sidebar
  +provider_sidebar

block content
  .row: .col-lg-12
    +page-title(current_question.Question.title, ['Manage Questions', 'Negotiated Questions', 'Details'])

  .row: .col-lg-12
    +card('Negotiated Question')
      .row
        .col-md-6
          h3= current_question.Question.title
        .offset-md-2.col-md-4
          .mt-3.float-right
            .m-b-10
              strong Consumer :&nbsp;
              span.float-right= current_question.Consumer.email
      .row.mt-3
        .col-md-6
          h5 Negotiated Price
          p= current_question.negotiation_price
          h5 Negotiated Epsilon
          p= current_question.negotiation_epsilon
          h5 Perturbed Answer
          p= current_question.p_response
          h5 Provider's Point
          p= current_question.Provider.point
