extends ../theme-boilerplate.pug

block sidebar
  include ./sidebar.pug
  +provider_sidebar
block content
  .row: .col-lg-12
    +page-title('Recent Questions', ['Provider', 'Recent Questions'])
  
  .row: .col-lg-12
    +card('Questions')
      .table-responsive
        table.table
          thead
            tr
              th Question Name
              th Number of Providers
          tbody
            each question in recent_questions
              tr
                td: a(href=`/provider/questions/${question.id}`)= question.title   
                td= question.reply_count

