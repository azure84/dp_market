extends ../theme-boilerplate.pug

block sidebar
  include ./sidebar
  +provider_sidebar

block content
  .row: .col-lg-12
    +page-title('Negotiating Questions', ['Manage Questions', 'Negotiating Questions'])
  
  .row: .col-lg-12
    +cardbox('Questions')
      .table-responsive
        table.table.table-borderless.mb-0
          thead.thead-light
            tr
              th Question Name
          tbody
            each question in unapproved_questions
              tr
                td: a(href=`/provider/negotiation/${question.id}`)= question.title

