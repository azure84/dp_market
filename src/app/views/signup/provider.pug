extends ../boilerplate

block content
  .container.h-100.white
    .row.h-100.d-flex.align-items-center
      .col-md-6.mx-auto
        h2 Provider Sign up
        form(method='POST', action='/signup/provider')
          .form-group
            label email
            input.form-control(type='text', name='email', autocomplete='off')
          .form-group
            label password
            input.form-control(type='password', name='password')
          .form-group
            label
              | default epsilon: 
              span.eps
            input.custom-range(type='range', for='.eps', min='0.1', max='10', step='0.1', name='epsilon')
          .form-group
            label default price
            input.form-control(type='text', name='price', autocomplete='off')
          input.btn.btn-primary(type='submit', value='Sign up')
